{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-jsx"
  ],
  "plugins": [
    "googleappsscript"
  ],
  "env": {
    "googleappsscript/googleappsscript": true
  },
  "rules": {
    //    "prettier/prettier": "error",
    "camelcase": "warn",
    "no-trailing-spaces": "off",
    "import/prefer-default-export": "warn",
    "import/no-extraneous-dependencies": "warn",
    "arrow-parens": "off",
    "prefer-object-spread": "warn",
    "semi": [
      2,
      "never"
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  }
}
