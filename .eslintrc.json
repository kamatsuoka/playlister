{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-jsx"
  ],
  "rules": {
    "arrow-parens": "off",
    "camelcase": "warn",
    "import/prefer-default-export": "warn",
    "import/no-extraneous-dependencies": "warn",
    "prefer-object-spread": "warn",
    "spaced-comment": "off",
    "semi": [
      2,
      "never"
    ]
  }
}
